<div class="col-sm-offset-4 col-sm-8"><h3>Redeemer History for <%= @redeemer.first_name %> <%= @redeemer.last_name %></h3></div>
<h4>
    <div class="row">
        <div class="col-sm-offset-2 col-sm-2">Redeemers</div>
        <div class="col-sm-1">Plastic</div>
        <div class="col-sm-1">Glass</div>
        <div class="col-sm-1">Cans</div>
        <div class="col-sm-2">Select Date</div>
        <div class="col-sm-2">Complete Date</div>
    </div>
</h4>
<h5>
<% @recyclers_for_redeemer.each do |recycler_redeemer|%>
    <div class="row">
       <div class="col-sm-offset-2 col-sm-2">
            <%= recycler_redeemer.recycler[:first_name] %>
            <%= recycler_redeemer.recycler[:last_name] %>
        </div>
        <div class="col-sm-1"><%= recycler_redeemer[:plastic]%> </div>
        <div class="col-sm-1"><%= recycler_redeemer[:glass]%> </div>
        <div class="col-sm-1"><%= recycler_redeemer[:cans]%> </div>
        <div class="col-sm-2"><%= if recycler_redeemer[:selection_date] then recycler_redeemer[:selection_date].strftime("%b %d, %Y") end %> </div>
        <div class="col-sm-2"><%= if recycler_redeemer[:completion_date] then recycler_redeemer[:completion_date].strftime("%b %d, %Y") end %> </div>
    </div>
<%end%>
</h5>
<h4>
<div class="col-sm-offset-5 col-sm-3"><%= link_to "back to all redeemers", redeemers_path %></div>
</h4>