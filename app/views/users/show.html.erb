<div class="row">
    <% if @user[:function] == "redeemer" %>
        <div class="col-sm-offset-5 col-sm-2 form_label"><h1>Redeemer</h1></div>
     <% else %>
        <div class="col-sm-offset-5 col-sm-2 form_label"><h1>Recycler</h1></div>
     <% end %>
 </div>
<h4>
    <div class="row">
        <div class="col-sm-offset-4 col-sm-2 form_label">First Name:</div>
        <div class= "col-sm-6"><%= @user.first_name %></div>
     </div>
     <div class="row">
        <div class="col-sm-offset-4 col-sm-2 form_label">Last Name:</div>
        <div class="col-sm-6"><%= @user.last_name %></div>
    </div>

    <div class="row">
        <div class="col-sm-offset-4 col-sm-2 form_label">Email:</div>
        <div class="col-sm-6"><%= @user.email %></div>
    </div>

    <div class="row">
        <div class="col-sm-offset-4 col-sm-2 form_label">Phone:</div>
        <div class="col-sm-6"><%= @user.phone %></div>
    </div>
<% if @user[:function] == "recycler" %>
    <div class="row">
        <div class="col-sm-offset-4 col-sm-2 form_label">Address</div>
        <div class="col-sm-6"><%= @user.address %></div>
    </div>

    <div class="row">
        <div class="col-sm-offset-4 col-sm-2 form_label">City:</div>
        <div class="col-sm-6"><%= @user.city %></div>
    </div>

    <div class="row">
        <div class="col-sm-offset-4 col-sm-2 form_label">State:</div>
        <div class="col-sm-6"><%= @user.state %></div>
    </div>

    <div class="row">
        <div class="col-sm-offset-4 col-sm-2 form_label">Zipcode:</div>
        <div class="col-sm-6"><%= @user.zipcode %></div>
    </div>
<% else %>
    <div class="row">
        <div class="col-sm-offset-4 col-sm-2 form_label">DMV:</div>
        <div class="col-sm-6"><%= @user.dmv_number %></div>
    </div>
<% end %>
    <div class="row">
        <div class="col-sm-offset-4 col-sm-2 form_label">Edit / Delete:</div>
        <div class="col-sm-6"><%= link_to "Edit", edit_user_path(@user) %> <!-- /users/:id -->

        <%= link_to "Delete", user_path(@user), :method => :delete, :confirm => "Are you sure?" %></div>
    </div>
  </h4>
</div>
<div class="row">
  <div class="col-sm-offset-4 col-sm-7">
      <img src="/assets/recycle_center_guys.jpg" alt="recycle drop off">
  </div>
</div>