<div class="row">
  <div class="col-sm-offset-2 col-sm-8 "><h2>Login Information</h2></div>
</div>
<div class="row">
  <div class="col-sm-offset-2 col-sm-3 form_label">Username:</div>
  <div class="col-sm-2"><%= f.text_field :username, placeholder: "<username>",  required: true %></div>
</div>
<div class="row">
  <div class="col-sm-offset-2 col-sm-3 form_label">Password:</div>
  <div class="col-sm-2"><%= f.password_field :password, placeholder: "<password>", required: true %></div>
</div>
<div class="row">
  <div class="col-sm-offset-0 col-sm-5 form_label">Password Confirmation:</div>
  <div class="col-sm-2"><%= f.password_field :password_confirmation, placeholder: "<password confirmation>", required: true %></div>
</div>

<div class="row">
  <div class="col-sm-offset-2 col-sm-8 "><h2>Profile Information</h2></div>
</div>
<div class="row">
  <div class="col-sm-offset-2 col-sm-3 form_label">First Name:</div>
  <div class="col-sm-4"><%= f.text_field :first_name, placeholder: "< first name >", required: true %>
  </div>
</div>
<div class="row">
  <div class="col-sm-offset-2 col-sm-3 form_label">Last Name:</div>
  <div class="col-sm-6"><%= f.text_field :last_name, placeholder: "< last name >", required: true %></div>
</div>
<div class="row">
  <div class="col-sm-offset-2 col-sm-3 form_label">Email:</div>
  <div class="col-sm-6"><%= f.email_field :email, placeholder: "< email >", required: true %></div>
</div>
<div class="row">
  <div class="col-sm-offset-2 col-sm-3 form_label">Phone:</div>
  <div class="col-sm-6"><%= f.telephone_field :phone, placeholder: "< phone >", required: true %></div>
</div>
<div class="row">
  <div class="col-sm-offset-2 col-sm-3 form_label">Address:</div>
  <div class="col-sm-6"><%= f.text_field :address, placeholder: "< address >", required: true %></div>
</div>
<div class="row">
  <div class="col-sm-offset-2 col-sm-3 form_label">City:</div>
  <div class="col-sm-6"><%= f.text_field :city, placeholder: "< city >", required: true %></div>
</div>
<div class="row">
  <div class="col-sm-offset-2 col-sm-3 form_label">State:</div>
  <div class="col-sm-6"><%= f.text_field :state, placeholder: "< state >", required: true %></div>
</div>
<div class="row">
  <div class="col-sm-offset-2 col-sm-3 form_label">Zipcode:</div>
  <div class="col-sm-6"><%= f.text_field :zipcode, placeholder: "< zipcode >", required: true %></div>
</div>