<!DOCTYPE html>
<html ng-app="Hi5Exchange">
<head>
  <title>Recycle</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
  <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>

</head>
<body>
  <div id="wrap">
  <header>
    <div class="bs">
        <img id="logo" src="/assets/hi5-modern-large.png" class="img-responsive" style="width: 5%;"alt="HI5 logo">
      <ul class="nav nav-pills">

        <% if !current_user %>
          <li class="dropdown" id="signin">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              Sign In <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><a href="#">Facebook</a></li>
              <li><a href="#">Twitter</a></li>
              <li><a href="#">g+</a></li>
              <li><%= link_to "Email", login_path %></li>
            </ul>
          </li>
          <li class="dropdown" id="signup">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              Sign Up <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "As a Recycler", new_user_path( function: 'recycler' ) %></li>
              <li><%= link_to "As a Redeemer", new_user_path( function: 'redeemer' ) %></li>
            </ul>
          </li>
        <% end %>
        <% if current_user %>
          <li id="signout"><%= link_to "Logout", logout_path %></li>
        <% end %>

        <% if current_user %>
          <% if current_user[:function] == "redeemer" || current_user[:function] == "recycler" ||    current_user[:function] == "admin" %>
          <li class="active" id="profile">
            <a href="/users/<%= current_user[:id] %>">Profile</a>
          </li>
          <% end %>
          <% if current_user[:function] == "redeemer" || current_user[:function] == "admin" %>
            <li class="active" id="select">
              <%= link_to "Select", redeemers_path %>
            </li>
          <% end %>
          <% if current_user[:function] == "recycler" || current_user[:function] == "admin" %>
            <li class="active" id="recycle">
              <%= link_to "Recycle", transactions_path %>
            </li>
          <% end %>
        <% end %>

        <% if !current_user || !current_user[:id] %>
          <li class="active" id="home">
            <%= link_to "Home", root_path %>
          </li>
        <% end %>



      </ul>
    </div>

  </header>
  <div class="container">
    <div class="row">

      <div class="col-sm-offset-4 col-sm-8 error">
        <% if flash[:errors] %>
          <% flash[:errors].each do |error| %>
            <li><%= error %></li>
          <% end %>
        <% end %>
     </div>

      <%= yield %>
    </div>
  </div>
</div>
<div class="row">
  <%= render  :partial => "layouts/footer" %>
</div>
</body>
</html>

