source 'https://rubygems.org'

ruby '2.0.0'

gem 'rails', '3.2.14'
gem 'twilio-ruby'

gem 'pg'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
  gem 'angularjs-rails'
end

gem 'jquery-rails'

group :development, :test do
  gem 'rspec-rails'
  gem 'shoulda-matchers'
  gem 'pry'
  gem 'pry-rails'
  gem 'dotenv-rails'
  gem 'unicorn-rails'
end

group :test do
  gem 'capybara'
end

# To use ActiveModel has_secure_password
gem 'bcrypt-ruby', '~> 3.0.0'

gem 'geocoder'
gem 'unicorn'
gem 'sidekiq'
gem 'sidetiq'

# To use Jbuilder templates for JSON
# gem 'jbuilder'

# Deploy with Capistrano
# gem 'capistrano'

# To use debugger
# gem 'debugger'
